<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.onurkanbakirci.aktuelBak">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_xxx"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_xxx"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        >
        <uses-library android:name="org.apache.http.legacy"
            android:required="false"/>
        <activity android:name="com.onurkanbakirci.aktuelBak.ui.fragments.catalog.CatalogFullScreenActivity" />
        <activity android:name="com.onurkanbakirci.aktuelBak.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.onurkanbakirci.aktuelBak.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>