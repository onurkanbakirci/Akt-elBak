<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="products"
            type="com.onurkanbakirci.aktuelBak.data.model.Product" />
        <variable
            name="lastProductViewModel"
            type="com.onurkanbakirci.aktuelBak.ui.fragments.LastProductViewModel" />
    </data>
    <LinearLayout
        android:onClick="@{(view)->lastProductViewModel.moveToProductDetail(view,products)}"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_marginBottom="@dimen/marginBottom"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:background="@drawable/shadow_effect"
        >
        <ImageView
            android:layout_marginHorizontal="1dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/products_image_bck"
            android:layout_gravity="center"
            app:image="@{products.img}"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{products.subtitle}"
            />
        <TextView
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:layout_height="25dp"
            android:text="@{products.name}"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:text="@{products.price}"
                />
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/ic_star"
                android:onClick="@{()->lastProductViewModel.startClickedEvent(products)}"
                />
        </LinearLayout>
    </LinearLayout>
</layout>