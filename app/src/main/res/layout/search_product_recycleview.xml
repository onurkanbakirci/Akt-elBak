<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="productSearch"
            type="com.onurkanbakirci.aktuelBak.data.model.Product" />
        <variable
            name="marketViewModel"
            type="com.onurkanbakirci.aktuelBak.ui.fragments.MarketViewModel" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:onClick="@{(view)->marketViewModel.moveToProductDetail(view,productSearch)}"
        android:layout_marginVertical="@dimen/marginTop"
        android:background="@drawable/shadow_effect"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/marketImage"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:marketImage="@{productSearch.market}"
            />
        <LinearLayout
            android:id="@+id/imageFavProduct"
            android:layout_below="@id/marketImage"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="200dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:image="@{productSearch.img}"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/favProductName"
            android:layout_below="@+id/imageFavProduct"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            android:text="@{productSearch.name}"
            />
        <TextView
            android:id="@+id/productPrice"
            android:layout_below="@+id/favProductName"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:text="@{productSearch.price}"
            />

            <ImageView
                android:id="@+id/share"
                android:layout_below="@+id/productPrice"
                android:background="@drawable/ic_share_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:onClick="@{()->marketViewModel.shareFavProduct(productSearch)}"
                />
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/productPrice"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/ic_star"
                android:onClick="@{()->marketViewModel.startClickedEvent(productSearch)}"
                />
    </RelativeLayout>
</layout>