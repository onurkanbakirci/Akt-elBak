<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <ImageView
        android:layout_marginVertical="5dp"
        android:background="@drawable/shadow_effect"
        android:id="@+id/marketLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_below="@+id/marketLogo"
        android:id="@+id/productDetailImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
    <TextView
        android:id="@+id/textOfProductName"
        android:layout_below="@+id/productDetailImage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/textOfProductPrice"
        android:layout_below="@+id/textOfProductName"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="50dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"
        />
</RelativeLayout>
