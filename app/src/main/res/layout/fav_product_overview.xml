<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="productFav"
            type="com.onurkanbakirci.aktuelBak.data.model.Product" />
        <variable
            name="favProductViewModel"
            type="com.onurkanbakirci.aktuelBak.ui.fragments.FavoriteProductViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:onClick="@{(view)->favProductViewModel.moveToProductDetail(view,productFav)}"
        android:background="@drawable/shadow_effect"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/marketImage"
            android:layout_centerHorizontal="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:marketImage="@{productFav.market}"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/imageFavProduct"
            android:layout_below="@id/marketImage"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:image="@{productFav.img}"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/favProductName"
            android:layout_below="@+id/imageFavProduct"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            android:text="@{productFav.name}"
            />
        <TextView
            android:id="@+id/productPrice"
            android:layout_below="@+id/favProductName"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            android:text="@{productFav.price}"
            />
        <LinearLayout
            android:layout_below="@+id/productPrice"
            android:id="@+id/removeButton"
            android:layout_width="match_parent"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:background="@drawable/ic_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="@{()->favProductViewModel.deleteFavProduct(productFav)}"
                />
            <ImageView
                android:background="@drawable/ic_share_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="@{()->favProductViewModel.shareFavProduct(productFav)}"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>