            android:layout_below="@+id/seperatorBIM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/a101MarketLogoField"
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:background="@{lastProductViewModel.resIDA101}"
                />
            <FrameLayout
                android:layout_below="@+id/a101MarketLogoField"
                android:layout_width="match_parent"
