<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="lastProductViewModel"
            type="com.onurkanbakirci.aktuelBak.ui.fragments.LastProductViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="@{lastProductViewModel.mainVisibility}"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/BIMsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bimMarketLogoField"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@{lastProductViewModel.resIDBIM}"
                />
            <FrameLayout
                android:layout_below="@+id/bimMarketLogoField"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                >
                <ProgressBar
                    android:indeterminateTint="@color/colorPrimary"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="@{lastProductViewModel.progressVisibileBIM}"
                    />
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_below="@+id/bimMarketLogoField"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/recycle_view_product"
                   />
    </FrameLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/seperatorBIM"
            android:layout_below="@+id/BIMsection"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/seperator"
            />
