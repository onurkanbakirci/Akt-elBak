                <ProgressBar
                    android:indeterminateTint="@color/colorPrimary"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="@{lastProductViewModel.progressVisibileA101}"
                    android:layout_gravity="center"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/a101MarketLogoField"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycle_view_product_a101"
                    />
            </FrameLayout>

        </RelativeLayout>
        <ImageView
            android:layout_below="@+id/A101Section"
            android:id="@+id/seperatorA101"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/seperator"
            />
