            <LinearLayout
                android:id="@+id/HAKMARCat"
                android:layout_below="@+id/BIMCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/marginTop"
                >
                <ImageView
                    android:background="@{catalogFragmentViewModel.resIDHAKMAR}"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@dimen/marginRight"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp">
                    <ProgressBar
                        android:indeterminateTint="@color/colorPrimary"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:visibility="@{catalogFragmentViewModel.visibilityOfHAKMARCatProgress}"

                        />
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycle_view_catalog_hakmar"
                    />
                </FrameLayout>
            </LinearLayout>
    </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:onClick="@{catalogFragmentViewModel::againFetch}"
                android:visibility="@{catalogFragmentViewModel.errorVisibility}"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:background="@drawable/ic_attention"
                    android:layout_height="80dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/con_err_str"
                    />
            </LinearLayout>
        </RelativeLayout>
