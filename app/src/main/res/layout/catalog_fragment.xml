<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="catalogFragmentViewModel"
            type="com.onurkanbakirci.aktuelBak.ui.fragments.catalog.CatalogFragmentViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{catalogFragmentViewModel.mainCatVisibility}"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/BIMCat"
                    >
                    <ImageView
                        android:background="@{catalogFragmentViewModel.resIDBIM}"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="@dimen/marginRight"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="320dp">
                        <ProgressBar
                            android:indeterminateTint="@color/colorPrimary"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:visibility="@{catalogFragmentViewModel.visibilityOfBIMCatProgress}"
                            />
                            <androidx.recyclerview.widget.RecyclerView
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/recycle_view_catalog_bim"
                                />
                    </FrameLayout>
                </LinearLayout>
